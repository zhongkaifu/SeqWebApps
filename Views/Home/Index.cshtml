
@{
    Layout = null;
}

<!DOCTYPE html>
<style>
    .loading {
        display: none;
    }
</style>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>


    <label id="promptInput">Input Text:</label>
    <br />
    <textarea type="text" id="txtName" cols="100" rows="20"></textarea>
    <br />
    <label id="promptOutputTokenNum">The number of tokens to output:</label>
    <select id="ddlOutputTokenNum">
        <option value="50">50</option>
        <option value="100" selected="selected">100</option>
        <option value="200">200</option>
    </select>
    <input type="button" id="btnGet" value="Generate Text" />
    <br />
    <div class="loading"><img src="https://github.com/zhongkaifu/Seq2SeqSharp/blob/master/SeqWebApps/wwwroot/loading.gif?raw=true"></div>
    <label id="promptOutput">Output Text:</label>
    <br />
    <label id="outputText"></label>

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#btnGet").click(function () {
                var data = {};
                data.Name = "Mudassar";
                $.ajax({
                    type: "POST",
                    url: "/Home/GenerateText",
                    data: { "input": $("#txtName").val(), "num": $("#ddlOutputTokenNum").val() },
                    beforeSend: function () {
                        $("#outputText").html("");
                        $(".loading").show();
                    },
                    success: function (response) {
                        $(".loading").hide();
                        $("#outputText").html(response.Output);
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            });
        });
    </script>
</body>
</html>
